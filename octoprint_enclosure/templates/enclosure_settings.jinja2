<form class="form-horizontal">
	<h3>Sensor(DHT11)</h3>
	<div class="control-group">
		<label class="control-label">{{ _('Sensor pin') }}</label>
		<div class="controls">
			<input type="text" class="input-block-level" data-bind="value: settings.plugins.enclosure.sensorPin">
		</div>
	</div>
	<div class="control-group">
		<label class="control-label">{{ _('Sensor update interval') }}</label>
		<div class="controls">
			<input type="text" class="input-block-level" data-bind="value: settings.plugins.enclosure.sensorUpdateInterval">
		</div>
	</div>
	<hr>
	<h3>Led</h3>
	
	<div class="control-group">
		<label class="control-label">{{ _('Led pin') }}</label>
		<div class="controls">
			<input type="text" class="input-block-level" data-bind="value: settings.plugins.enclosure.ledPin">
		</div>
	</div>
</form>
